# EditorConfig for ExpressJS + EJS project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.js]
indent_size = 2
max_line_length = 120

[*.ejs]
indent_style = space
indent_size = 2
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2